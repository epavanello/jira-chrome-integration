{
  "private": true,
  "name": "jira-gitlab-integration",
  "version": "0.0.1",
  "description": "A browser extension for integrate Jira with Gitlab",
  "keywords": [
    "chrome-extension",
    "web-extension",
    "javascript",
    "jira",
    "gitlab",
    "svelte",
    "rollup"
  ],
  "homepage": "https://github.com/epavanello/jira-gitlab-integration#readme",
  "bugs": {
    "url": "https://github.com/epavanello/jira-gitlab-integration/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epavanello/jira-gitlab-integration.git"
  },
  "author": "Pavanello Emanuele <pavanello.emanuele@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "validate": "svelte-check",
    "lint": "prettier --ignore-path .gitignore  --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.7.0",
    "rollup": "^2.36.2",
    "rollup-plugin-chrome-extension": "^3.6.7",
    "rollup-plugin-empty-dir": "^1.0.4",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-zip": "^1.0.1",
    "svelte-check": "^2.7.0",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@types/chrome": "^0.0.174",
    "autoprefixer": "^10.4.1",
    "postcss": "^8.4.5",
    "svelte": "^3.48.0",
    "tailwindcss": "^3.0.10"
  }
}
