{
  "background": {
    "scripts": ["background/index.ts"]
  },
  "content_scripts": [
    {
      "js": ["content/content_script.js"],
      "matches": ["*://*/*"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "web_accessible_resources": ["content/index.ts"],
  "externally_connectable": {
    "matches": ["*://*/*"]
  }
}
